{
	"name": "geargrab",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "NODE_ENV=production vite build",
		"preview": "vite preview",
		"start": "NODE_ENV=production node build",
		"start:prod": "NODE_ENV=production PORT=8080 node build",
		"prepare": "husky install && svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint . --ext .js,.ts,.svelte",
		"lint:fix": "eslint . --ext .js,.ts,.svelte --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"test": "cypress run",
		"test:open": "cypress open",
		"setup:firestore": "node scripts/setup-firestore.js",
		"test:ci": "cypress run --browser chrome --headless",
		"test:coverage": "cypress run --env coverage=true",
		"docker:build": "docker build -t geargrab .",
		"docker:run": "docker run -p 8080:8080 geargrab"
	},
	"dependencies": {
		"@sentry/sveltekit": "^7.0.0",
		"@stripe/stripe-js": "^7.5.0",
		"firebase": "^10.7.0",
		"firebase-admin": "^12.0.0",
		"stripe": "^14.0.0",
		"zod": "^3.22.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@types/node": "^20.0.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"autoprefixer": "^10.4.16",
		"cypress": "^14.5.2",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.35.0",
		"postcss": "^8.4.32",
		"prettier": "^3.1.0",
		"prettier-plugin-svelte": "^3.1.0",
		"prettier-plugin-tailwindcss": "^0.5.7",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tailwindcss": "^3.3.6",
		"typescript": "^5.0.0",
		"vite": "^5.0.0"
	}
}
