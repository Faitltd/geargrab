# GearGrab Environment Configuration (Modern Stack)
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=5173
HOST=localhost
PUBLIC_APP_URL=http://localhost:5173

# =============================================================================
# FIREBASE CONFIGURATION (Production Database & Auth)
# =============================================================================
# Get these from Firebase Console > Project Settings > General > Your apps > Web app
PUBLIC_FIREBASE_API_KEY=your-api-key-here
PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
PUBLIC_FIREBASE_PROJECT_ID=your-project-id
PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.storage.googleapis.com
PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
PUBLIC_FIREBASE_APP_ID=your-app-id

# =============================================================================
# AUTH.JS CONFIGURATION (Modern Authentication)
# =============================================================================
AUTH_SECRET=your-auth-secret-here-generate-with-openssl-rand-base64-32
AUTH_TRUST_HOST=true

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
# Get these from Stripe Dashboard > Developers > API Keys
PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# EMAIL CONFIGURATION (Optional - Supabase handles auth emails)
# =============================================================================
# For custom email sending (newsletters, notifications, etc.)
RESEND_API_KEY=your-resend-api-key-here
FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# MONITORING & ANALYTICS (OPTIONAL)
# =============================================================================
# Sentry for error monitoring
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@xxxxxxx.ingest.sentry.io/xxxxxxx

# PostHog for analytics
PUBLIC_POSTHOG_KEY=your-posthog-key
PUBLIC_POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug logging in development
DEBUG=true

# Disable HTTPS enforcement in development
DISABLE_HTTPS=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test user credentials for E2E tests
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=TestPassword123!
TEST_ADMIN_EMAIL=admin@example.com
TEST_ADMIN_PASSWORD=AdminPassword123!

# Test database URL (for isolated testing)
TEST_DATABASE_URL=postgresql://postgres:password@localhost:54322/postgres
